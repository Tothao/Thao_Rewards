<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current"
                   name="customer-account-navigation-myreward"
                   after="newsletter"
                   template="Magento_Customer::account/link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">My Rewards</argument>
                    <argument name="path" xsi:type="string">rewards/index</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
